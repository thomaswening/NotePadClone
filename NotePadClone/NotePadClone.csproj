  <ItemGroup>
    <Reference Include="WpfEssentials">
      <HintPath>..\..\WpfEssentials\WpfEssentials\bin\Debug\net8.0-windows\WpfEssentials.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>
